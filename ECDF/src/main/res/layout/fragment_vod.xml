<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ultimos_programas"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/back_programados"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_programs_title_label"
                android:textColor="#5E5E5E"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:text="@string/vod_last_programs_title"
                android:layout_marginLeft="20dp" />

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_below="@+id/last_programs_title_label"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="0dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never"
                android:smoothScrollbar="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/last_programs_container"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ultimos_partidos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/back_programados"
            android:orientation="vertical">

            <TextView
                android:id="@+id/last_matches_title_label"
                android:textColor="#5E5E5E"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:text="@string/vod_last_matches_title"/>

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_below="@+id/last_matches_title_label"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="0dp"
                android:fadingEdge="none"
                android:fadingEdgeLength="0dp"
                android:overScrollMode="never"
                android:smoothScrollbar="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/last_matches_container"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </LinearLayout>

            </HorizontalScrollView>

        </RelativeLayout>

</LinearLayout>

