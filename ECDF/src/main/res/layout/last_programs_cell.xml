<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="20dp"
    android:layout_height="145dp">

    <LinearLayout
        android:id="@+id/share_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <include
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/share_fragment" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_container"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/image_container_vod"
            android:layout_width="170dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/place_holder"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/preview_image"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="2dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp" />

            <ImageView
                android:background="@drawable/btn_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/info_layout"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image_container_vod"
            android:layout_width="170dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99000000"
                android:text="loremL "
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title_label_2"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:textColor="#99000000"
                android:layout_toRightOf="@+id/title_label"
                android:layout_alignBottom="@id/title_label"
                android:text=" VS "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title_label_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="#99000000"
                android:layout_below="@+id/title_label"
                android:layout_alignLeft="@+id/title_label"
                android:text="slknddfg "
                android:textSize="17sp" />

            <TextView
                android:id="@+id/time_label"
                android:textColor="#77000000"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/title_label"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timeGoesHere"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/share_button"
                android:scaleType="centerCrop"
                android:background="#00000000"
                android:src="@drawable/compartir"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>